/* pages/index.wxss */

.container{
  width: 100%;
  height: 92%;
  margin-top: 24rpx;
  display: flex;
  justify-content: center;
}

.calculator{
  position: relative;
  width: 95%;
  height: 95%;
  background: #EEF0EB;
  border-radius: 80rpx;
  display: flex;
  justify-content: center;
  box-shadow:  5px 5px 8px #a4a7a0,
             -5px -5px 8px #aeb1aa;
  overflow: hidden;
}

/* 显示屏区域 */
.monitors{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
  width: 90%;
  height: 15%;
  margin-top: 30rpx;
  background: #000;
  color: #1BF1FE;
  padding-right: 20rpx;
  border-radius: 50rpx;
  box-shadow:  5px 5px 8px #a4a7a0,
             -5px -5px 8px #aeb1aa;
  overflow: hidden;
}

.calculation{
  position: absolute;
  bottom: 130rpx;
  font-size: 35rpx;
}

.result{
  font-size: 100rpx;
}

/* 显示屏遮罩 */
.mask{
  position:absolute;
  display: flex;
  left: -74rpx;
  top: -100rpx;
  width: 50%;
  height: 190%;
  background: rgba(124, 121, 121, 0.2);
  transform:rotate(30deg);
  
}

.keys{
  position: relative;
  top: 20%;
  width: 100%;
  height: 80%;
  display: flex;
  flex-wrap: wrap;
  align-items: start;
  justify-content: center;
}

.keyPress{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  font-size: 60rpx;
  /* margin: 15rpx; */
  border: 4rpx solid rgb(216, 214, 214);
  border-radius: 200rpx;
  background: #CED7D8;
  box-shadow: 0px 15px 15px -15px rgb(131, 130, 130) inset,
              0px -15px 15px -15px rgb(255, 255, 255) inset; 
}

.outsideBorder{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 134rpx;
  margin: 10rpx;
  border-radius: 200rpx;
  border: 4rpx solid rgb(161, 161, 161);
  box-shadow: 0px 15px 15px -15px rgb(83, 82, 82); 
}

.circuitBoard{
  width: 134rpx;
  height: 134rpx;
  border-radius: 200rpx;
}

.exceptZero{
  width: 134rpx;
}

.zero{
  width: 290rpx;
}

.equal{
  background: #75e8f5;
}

.keyPress:active{
  box-shadow: 0px 15px 15px -15px rgb(39, 38, 38) inset,
              0px -15px 15px -15px rgb(201, 201, 201) inset; 
}

.press{
  box-shadow: 0px 15px 15px -15px rgb(39, 38, 38) inset,
              0px -15px 15px -15px rgb(201, 201, 201) inset; 
}